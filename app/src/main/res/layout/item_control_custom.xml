<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/size10dp"
        android:layout_marginRight="@dimen/size10dp"
        android:layout_marginTop="@dimen/size5dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/img_flashlight"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="@dimen/size10dp"
                android:background="@drawable/hightlight_button_frame"

                android:padding="10dp"

                android:scaleType="center"
                android:src="@drawable/ic_flashlight"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/img_clock"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="@dimen/size10dp"
                android:background="@drawable/hightlight_button_frame"

                android:padding="10dp"

                android:scaleType="centerInside"
                android:src="@drawable/ic_timer"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/img_calculator"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="@dimen/size10dp"
                android:background="@drawable/hightlight_button_frame"
                android:scaleType="center"
                android:src="@drawable/ic_calculator"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/img_camera"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_marginRight="@dimen/size10dp"
                android:background="@drawable/hightlight_button_frame"
                android:padding="10dp"
                android:scaleType="center"
                android:src="@drawable/ic_camera"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
