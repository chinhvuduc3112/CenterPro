<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff">


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_item_normal_state"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10dp"
        android:padding="@dimen/size5dp"
        android:background="@color/bg_item_normal_state"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size5dp"
            android:background="@null"
            android:padding="@dimen/size5dp"
            android:src="@drawable/ic_delete_app"/>

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/img_delete"
            android:layout_toRightOf="@id/img_delete"
            android:padding="@dimen/size5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/app_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size16dp"
            android:layout_toRightOf="@id/app_icon"
            android:text="App name"
            android:textColor="#000"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:gravity="center"
            android:id="@+id/linearLayout"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/img_drop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size10dp"
                android:src="@drawable/ic_drop"
                android:layout_centerVertical="true"/>
        </LinearLayout>

        <!--<View-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:id="@+id/drag_handle"-->
            <!--android:layout_width="32dp"-->
            <!--android:layout_height="64dp"-->
            <!--android:layout_gravity="top|left"-->
            <!--android:background="#20000000"-->
            <!--android:layout_marginRight="@dimen/size10dp"-->
            <!--android:clickable="true"/>-->
    </RelativeLayout>
    </FrameLayout>
</FrameLayout>