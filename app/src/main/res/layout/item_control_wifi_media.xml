<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10dp"
        android:layout_marginRight="@dimen/size10dp"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/size10dp"
            android:background="@drawable/background_main"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/img_airplane"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/hightlight_button_air"/>

                <ImageButton
                    android:id="@+id/img_syncdata"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/hightlight_button_sync"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/img_wifi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/hightlight_button_wifi"/>

                <ImageButton
                    android:id="@+id/img_bluetooth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/hightlight_button_bluetooth"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/size10dp"

            android:background="@drawable/background_main">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/size10dp"
                    android:background="@null"
                    android:src="@drawable/ic_setting"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/size5dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageButton
                        android:id="@+id/img_prev"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hightlight_music"
                        android:src="@drawable/ic_backward"/>

                    <ImageButton
                        android:id="@+id/img_pause"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hightlight_music"
                        android:src="@drawable/ic_play"/>

                    <ImageButton
                        android:id="@+id/img_next"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/hightlight_music"
                        android:src="@drawable/ic_forward"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
